<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"
       name="robot" >

  <!-- ur5 -->
<!--   <xacro:include filename="$(find ur_e_description)/urdf/ur5.urdf.xacro" /> -->
  <xacro:include filename="$(find ur_e_description)/urdf/ur10e.urdf.xacro" />

<xacro:macro name="robot" params="parent *origin">
  <joint name="robot_base_joint" type="fixed">
    <xacro:insert_block name="origin" />
    <parent link="${parent}"/>
    <child link="base_link" />
  </joint>

  <!-- arm -->
<!--   <xacro:ur5_robot prefix="" joint_limited="true"/> -->
  <xacro:ur10e_robot prefix="" joint_limited="false"/>

  <!-- adaptor -->
  <joint name="adaptor_joint" type="fixed">
    <parent link="tool0"/>
    <child link="adaptor_link"/>
    <origin xyz="0.0 0 0.0" rpy="0 0 ${-pi/2}"/>
  </joint>

  <link name="adaptor_link" >
    <!-- <visual>
      <geometry>
        <mesh filename="package://invariants_py_ros/robot_description/meshes/adaptor.stl" scale=".001 .001 .001"/>
      </geometry>
      <material name="Dark_Grey">
        <color rgba="0.4 0.4 0.4 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://invariants_py_ros/robot_description/meshes/adaptor.stl" scale=".001 .001 .001"/>
      </geometry>
    </collision> -->
  </link>


  <!-- load cell -->
  <joint name="load_cell_joint" type="fixed">
    <parent link="adaptor_link"/>
    <child link="load_cell_link"/>
    <origin xyz="0 0 ${0}" rpy="${pi} 0 ${-pi/4}"/>
  </joint>

  <link name="load_cell_link" >
    <!-- <visual>
      <geometry>
        <mesh filename="package://invariants_py_ros/robot_description/meshes/load_cell_67.stl" scale=".001 .001 .001"/>
      </geometry>
      <material name="Blue">
        <color rgba="0 0 0.3 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://invariants_py_ros/robot_description/meshes/load_cell_67.stl" scale=".001 .001 .001"/>
      </geometry>
    </collision> -->
  </link>

  <!-- TCP -->
  <joint name="TCP_joint" type="fixed">
    <parent link="load_cell_link" />
    <child link="TCP_frame" />
    <origin xyz="0 0 ${-0.05}" rpy="0.0 0.0 0.0" />
  </joint>

  <link name="TCP_frame" />

</xacro:macro>

</robot>
